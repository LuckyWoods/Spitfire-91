<Window x:Class="Spitfire.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Spitfire"
        mc:Ignorable="d"
        Title="Spitfire '91" Height="224" Width="256" FocusManager.FocusedElement="{Binding ElementName=GameCanvas}">

    <Canvas Name="GameCanvas" KeyDown="Canvas_KeyDown" KeyUp="Canvas_KeyUp" Focusable="True" >
        <Rectangle Name="player" Width="10" Height="5" Margin="0" Canvas.Left="10" Canvas.Top="10">

            <Rectangle.Fill>
                <SolidColorBrush Color="Blue" />
            </Rectangle.Fill>

        </Rectangle>

    </Canvas>
</Window>
